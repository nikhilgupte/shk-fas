<% form_tag account_path(:action => :login) do %>
<div class="row">
  <label for="username">Username</label>
  <%= text_field_tag :username, params[:username] %>
</div>
<div class="row">
  <label for="password">Password</label>
  <%= password_field_tag :password %>
</div>
<%= submit_tag 'Login' %>
<% end %>
<%= javascript_tag "$('username').focus()" %>
