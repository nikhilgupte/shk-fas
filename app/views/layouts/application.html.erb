<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<%= render :partial => 'layouts/meta_head' %>
</head>
<body>
<%= render :partial => 'layouts/header' %>

<div id="menu">
<ul class="side_by_side">
	<li <%= 'class="current"' if params[:controller] == 'orders' %>><%= link_to 'Orders', orders_path %></li>
	<li <%= 'class="current"' if params[:controller] == 'ingredients' %>><%= link_to 'Ingredients', ingredients_path %></li>
 <!-- <li><a href="#">Manage Users</a></li>-->
</ul>
<br clear="all"/>
</div>
<div id="sub_menu">
<%= render :partial => "#{params[:controller]}/nav" %>
<br clear="all"/>
</div>
<br clear="all"/>
<div class="wrapper" id="body">

<% if @title %><h1 class="page_title"><%= h @title %></h1><% end %>
<%= flash_message %>
<%= yield %>

</div><!-- wrapper -->
<%= render :partial => 'layouts/footer' %>
</body>
</html>
