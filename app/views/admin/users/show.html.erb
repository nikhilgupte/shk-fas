<table class="form">
<tr><th>Full Name</th><td><%= h(@user.full_name) %></td></tr>
<tr><th>Email</th><td><%= mail_to @user.email_address %></td></tr>
<tr><th>Logged in</th><td><%= time_ago_in_words @user.last_logged_in_at %> ago</td></tr>
<tr><th>Created</th><td><%= @user.created_at.to_s(:datetime) %></td></tr>
</table>
<div style="border-top:1px solid #ccc;padding:5px 0">
<ul class="side_by_side pipes">
<li><%= link_to 'Edit', edit_admin_user_path(@user) %></li>
<li class="last"><%= @user.id == @logged_in_user.id ? 'Disable' : (link_to_remote (@user.disabled? ? 'Enable':'Disable'), :url => toggle_disable_admin_user_path(@user), :confirm => 'Really disable this user?') %></li>
</ul>
</div>
